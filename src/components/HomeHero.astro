---
import { Image } from "astro:assets";
import logo from "../assets/images/logo.svg";

interface Props {
  title?: string;
  date?: string;
  image?: string;
  link?: string;
}

const { title, date, image, link } = Astro.props;
---

<div class="container">
  <h1 class="sr-only">{title}</h1>
  <div
    class="home-hero grid grid-cols-1 gap-16 lg:grid-cols-2 lg:gap-32 content-center"
    style={{ "--hero-bg": `url(${image})` }}
  >
    <Image
      src={logo}
      alt="Rockfest Logo"
      width={600}
      height={200}
      data-aos="fade-up"
    />
    <div class="content">
      <h2 data-aos="fade-up" data-aos-delay="100">{date}</h2>
      <p class="lead" data-aos="fade-up" data-aos-delay="200">
        Jugendhaus Oase KÃ¼ssnacht
      </p>
      <a
        role="button"
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-primary btn-xl btn-wide"
        data-aos="fade-up"
        data-aos-delay="300">Tickets</a
      >
    </div>
  </div>
</div>
